---
import SiteNavigation from "../components/SiteNavigation.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
const pageTitle = title ? `${title} | GemeinderatsRadar` : "GemeinderatsRadar";
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <SiteNavigation />
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #fdcb00;
    --color-primary-hover: #f4a900;
    --color-link: #0066cc;
    --color-link-hover: #004999;
    --color-text: #333;
    --color-text-muted: #555;
    --color-border: #ddd;
    --color-bg-card: #f9f9f9;
    --shadow-card: 0 4px 6px rgba(0, 0, 0, 0.1);
    --radius: 8px;
    --font-family: Arial, sans-serif;
  }

  body {
    margin: 0;
    padding: 0;
  }

  .page-header {
    font-size: 2.5rem;
    color: var(--color-text);
    margin-bottom: 20px;
    font-family: var(--font-family);
    font-weight: bold;
    text-align: center;
  }

  .section-card {
    margin-top: 20px;
    padding: 20px;
    background: #fff;
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
  }

  .section-heading {
    font-size: 1.5rem;
    margin-bottom: 15px;
    font-weight: bold;
    color: var(--color-text);
  }
</style>

<style>
  main {
    padding: 20px;
    font-family: var(--font-family);
  }
</style>
