---
import LegacyRedirectPage from "../../components/LegacyRedirectPage.astro";
import { getPaperReferenceStaticPaths } from "../../shared/paper-detail-paths";
import { buildVorlagenDetailUrl } from "../../shared/utils";

export async function getStaticPaths() {
  return getPaperReferenceStaticPaths();
}

const base = import.meta.env.BASE_URL;
const reference = Astro.params.reference ?? "";
const targetUrl = buildVorlagenDetailUrl(base, reference);
---

<LegacyRedirectPage targetUrl={targetUrl} preserveSearchAndHash={true} />
