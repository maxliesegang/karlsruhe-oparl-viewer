---
interface Props {
  id: string;
  label: string;
  options: string[];
}

const { id, label, options } = Astro.props;
---

<div class="filter-group">
  <label for={id}>{label}</label>
  <select id={id}>
    <option value="">Alle</option>
    {options.map((option) => <option value={option}>{option}</option>)}
  </select>
</div>

<style>
  .filter-group {
    display: flex;
    flex-direction: column;
    gap: 3px;
    flex: 1 1 146px;
    min-width: 140px;
    max-width: 210px;
  }

  .filter-group label {
    display: block;
    font-size: 0.72rem;
    line-height: 1.1;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: var(--color-text-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .filter-group select {
    width: 100%;
    min-height: 34px;
    padding: 4px 10px;
    border: 1px solid var(--color-border);
    border-radius: 6px;
    font-size: 0.86rem;
    line-height: 1.2;
    font-family: var(--font-family);
    color: var(--color-text);
    background: #fff;
    cursor: pointer;
  }

  .filter-group select:focus {
    outline: 2px solid var(--color-link);
    outline-offset: 1px;
  }

  @media screen and (max-width: 768px) {
    .filter-group {
      flex: 1 1 136px;
      min-width: 124px;
      max-width: none;
    }
  }
</style>
