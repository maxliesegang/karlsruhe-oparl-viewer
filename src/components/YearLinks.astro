---
interface Props {
  allYears: string[];
  currentYear: string;
}

const { allYears, currentYear } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<div class="year-links">
  {
    allYears.map((y) =>
      y === currentYear ? (
        <span class="year-link disabled">{y}</span>
      ) : (
        <a href={`${base}vorlagen${y}`} class="year-link">
          {y}
        </a>
      ),
    )
  }
</div>

<style>
  .year-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
    margin: 20px auto;
    text-align: center;
  }

  .year-link {
    font-size: 1rem;
    color: var(--color-link);
    text-decoration: none;
    font-family: var(--font-family);
    font-weight: normal;
    padding: 5px 10px;
    border: 1px solid var(--color-border);
    border-radius: 4px;
    transition:
      background-color 0.2s,
      text-decoration 0.2s;
  }

  .year-link:hover {
    background-color: #f8f9fa;
    text-decoration: underline;
  }

  .year-link.disabled {
    color: #6c757d;
    pointer-events: none;
    background-color: #e9ecef;
    border-color: #dee2e6;
    cursor: default;
  }
</style>
