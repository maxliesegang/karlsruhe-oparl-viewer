---
import type { ResolvedFile } from "../shared/types";
import { correctUrl, formatDateLong } from "../shared/utils";

interface Props {
  resolvedFiles: ResolvedFile[];
}

const { resolvedFiles } = Astro.props;
---

<section class="section-card">
  <h2 class="section-heading">Zusätzliche Dateien</h2>

  {
    resolvedFiles.length > 0 ? (
      <ul class="file-list">
        {resolvedFiles.map(({ file, content }) => {
          const fileText = content?.extractedText || "Kein Text verfügbar";

          return (
            <li class="file-item" data-id={file.id}>
              <div class="file-details">
                <a
                  href={correctUrl(file.accessUrl)}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="file-name"
                  aria-label={`Download ${file.name}`}
                >
                  <svg
                    class="download-icon"
                    width="24"
                    height="24"
                    fill="currentColor"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path d="M12.707 11.293l-2 2a1 1 0 01-1.414 0l-2-2a1 1 0 011.414-1.414L11 11.586V5a1 1 0 112 0v6.586l1.293-1.293a1 1 0 111.414 1.414z" />
                    <path d="M5 18a1 1 0 01-1-1v-1a1 1 0 112 0v1h10v-1a1 1 0 112 0v1a1 1 0 01-1 1H5z" />
                  </svg>
                  {file.name}
                </a>

                <div class="file-metadata">
                  <span>Erstellt: {formatDateLong(file.created)}</span>
                  <span>Zuletzt geändert: {formatDateLong(file.modified)}</span>
                </div>
              </div>

              <details class="file-text-details">
                <summary class="file-text-toggle">Extrahierter Text</summary>
                <p class="file-text">{fileText}</p>
              </details>
            </li>
          );
        })}
      </ul>
    ) : (
      <p class="no-files-msg">Keine zusätzlichen Dateien verfügbar.</p>
    )
  }
</section>

<style>
  .file-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
  }

  .file-item {
    border: 1px solid var(--color-border);
    border-radius: var(--radius);
    padding: 15px;
    background-color: #fff;
    transition: box-shadow 0.2s;
  }

  .file-item:hover {
    box-shadow: var(--shadow-card);
  }

  .file-name {
    font-weight: bold;
    font-size: 1.125rem;
    color: var(--color-link);
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .file-name:hover {
    text-decoration: underline;
  }

  .download-icon {
    flex-shrink: 0;
  }

  .file-metadata {
    margin-top: 10px;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    display: flex;
    flex-direction: column;
  }

  .file-text-details {
    margin-top: 10px;
  }

  .file-text-toggle {
    display: inline-flex;
    align-items: center;
    padding: 8px 12px;
    font-size: 0.875rem;
    color: #fff;
    background-color: var(--color-link);
    border-radius: 4px;
    cursor: pointer;
    list-style: none;
    user-select: none;
    transition: background-color 0.2s;
  }

  .file-text-toggle::-webkit-details-marker {
    display: none;
  }

  .file-text-toggle:hover {
    background-color: var(--color-link-hover);
  }

  .file-text {
    margin-top: 10px;
    padding: 10px;
    background-color: #fff;
    border-left: 3px solid var(--color-link);
    border-radius: 4px;
    font-size: 0.875rem;
    color: var(--color-text);
  }
</style>
