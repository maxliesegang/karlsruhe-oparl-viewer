---
import type { PaperFilterOptions } from "../shared/types";
import { PAPER_FILTER_FIELDS } from "../shared/paper-filter-definitions";
import FilterSelect from "./FilterSelect.astro";

interface Props {
  filterOptions: PaperFilterOptions;
}

const { filterOptions } = Astro.props;
---

<div
  class="filters"
  data-filters-panel
  data-collapsible="false"
  data-expanded="true"
>
  <div class="filters-toolbar">
    <button
      type="button"
      class="filters-toggle"
      data-filters-toggle
      aria-expanded="true"
    >
      Filter anzeigen
    </button>
    <p class="filter-count" id="filter-count"></p>
  </div>
  <div class="filter-row" data-filter-row>
    {
      PAPER_FILTER_FIELDS.map((field) => (
        <FilterSelect
          id={field.id}
          label={field.label}
          options={filterOptions[field.optionsKey] ?? []}
        />
      ))
    }
  </div>
</div>

<style>
  .filters {
    padding: 10px 16px;
    background: #f8f9fa;
    border-bottom: 1px solid var(--color-border);
  }

  .filters-toolbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 8px;
    min-height: 24px;
    min-width: 0;
  }

  .filters-toggle {
    display: none;
    align-items: center;
    justify-content: center;
    padding: 4px 10px;
    border: 1px solid var(--color-border);
    border-radius: 999px;
    background: #fff;
    color: var(--color-text);
    font-size: 0.78rem;
    line-height: 1.1;
    font-weight: 600;
    cursor: pointer;
    white-space: nowrap;
  }

  .filters[data-collapsible="true"] .filters-toggle {
    display: inline-flex;
  }

  .filters-toggle:hover {
    background: #f3f4f6;
  }

  .filters-toggle:focus-visible {
    outline: 2px solid var(--color-link);
    outline-offset: 2px;
  }

  .filter-row {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-end;
    gap: 6px 10px;
    margin-top: 8px;
    max-height: 640px;
    overflow: visible;
    transition:
      max-height 150ms ease,
      opacity 150ms ease,
      margin-top 150ms ease;
  }

  .filters[data-collapsible="true"][data-expanded="false"] .filter-row {
    max-height: 0;
    opacity: 0;
    margin-top: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .filters[data-collapsible="true"][data-expanded="true"] .filter-row {
    pointer-events: auto;
  }

  .filter-count {
    margin: 0 0 0 auto;
    font-size: 0.78rem;
    color: var(--color-text-muted);
    min-height: 1.2em;
    min-width: 0;
    text-align: right;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  @media screen and (max-width: 768px) {
    .filters {
      padding: 9px 12px;
    }

    .filter-row {
      gap: 6px 8px;
      margin-top: 7px;
    }

    .filters-toggle {
      font-size: 0.75rem;
      padding: 4px 9px;
    }
  }
</style>
